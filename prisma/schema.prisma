generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Review {
  id        String   @id @default(cuid())
  slug      String   // Blog post slug
  name      String?  // Optional reviewer name
  review    String   // Review content
  stars     Int      // 1-5 star rating
  createdAt DateTime @default(now())

  @@index([slug])
}
